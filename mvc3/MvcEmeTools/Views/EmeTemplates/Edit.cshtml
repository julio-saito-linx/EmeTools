@model Dominio.Entidades.Escripte
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Edit</h2>
<link href="@Url.Content("~/Scripts/google_prettifier/prettify.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
<style>
    #editor
    {
        position: relative;
        width: 100%;
        height: 600px;
        font-size: 13pt;
    }
</style>
@section js{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"> </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"> </script>
    <script src="@Url.Content("~/Scripts/jquery.textchange.min.js")"> </script>
    <script src="@Url.Content("~/Scripts/ace/ace.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ace/mode-ruby.js")" type="text/javascript"></script>
    <script>

        var editor = null;
        $().ready(function () {
            editor = ace.edit("editor");
            var javaScriptMode = require("ace/mode/ruby").Mode;
            editor.getSession().setMode(new javaScriptMode());
            
            var salvar = function () {
                var dados = {
                    Nome: $("#Nome").val(),
                    Descricao: $("#Descricao").val(),
                    Texto: editor.getSession().getValue()
                };

                var request = $.ajax({
                    type: "POST",
                    data: dados
                });

                request.done(function (data) {
                    exibirMensagemUi("Sucesso", "Os dados foram salvos com sucesso. Mensagem retornada: [" + data + "]");
                });

                request.fail(function (jqXHR, textStatus) {
                    exibirMensagemUi("Request failed", textStatus);
                });
            };

            $("#btnSalvar1").click(salvar);
            $("#btnSalvar2").click(salvar);
        });
    </script>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div style="display: block; width: 900px; height: 100%; text-align: right">
        @Html.ActionLink("ir para o Sequencer...", "Sequencer", new { id = Model.IdSha1 })
            <div>
                <input id="btnSalvar1" type="button" value="salvar" />
            </div>
    </div>
    <div style="display: block">
        <fieldset>
            <legend>@Model.Nome</legend>
            <div>
                <div id="editor">@Model.Texto</div>
            </div>
            <div style="float: right">
                <input id="btnSalvar2" type="button" value="salvar" />
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Nome)
            </div>
            <div class="editor-field textBox">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Descricao)
            </div>
            <div class="editor-field textAreaMedia">
                @Html.TextAreaFor(model => model.Descricao)
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>
        </fieldset>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Sequencer", "Sequencer", new { id = Model.IdSha1 })
</div>
