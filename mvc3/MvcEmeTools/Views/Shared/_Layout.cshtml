<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/kendo/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/kendo/kendo.default.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Scripts/noty/css/jquery.noty.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="menuTodo">
        <a href="@Url.Content("~/Escriptes")" class="menuItem">
            Escriptes
        </a>
        <a href="@Url.Content("~/Home/Ajuda")" class="menuItem">
            Ajuda
        </a>
        <a href="@Url.Content("~/Home/qUnit")" class="menuItem">
            qUnit
        </a>
    </div>
    <div class="corpo">
        @RenderBody()
    </div>
</body>
<script src="@Url.Content("~/Scripts/EmeTools/underscore/underscore-min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/EmeTools/jQuery/jquery-1.7.1.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/kendo/kendo.all.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.16.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.animate-shadow-min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/noty/js/jquery.noty.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Escriptes/helpers.js")" type="text/javascript"></script>
<script type="text/javascript">
    $().ready(function () {
        $('.menuItem').mouseover(function () {
            $(this).stop().animate({ boxShadow: '0 0 5px #494' }, 100);
        });
        $('.menuItem').mouseout(function () {
            $(this).stop().animate({ boxShadow: '0 0 5px #000' }, 1000);
        });
    });
</script>
@RenderSection("js", required: false)
</html>
