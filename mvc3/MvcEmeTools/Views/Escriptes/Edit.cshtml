@model Dominio.Entidades.Escripte
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("menu_edit_sequencer", Model.IdSha1)
<h2>
    Editor</h2>
<link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
<style>
    #editor
    {
        position: relative;
        width: 100%;
        height: 600px;
        /*font-size: 13pt;*/
    }
</style>
@section js{
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"> </script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"> </script>
    <script src="@Url.Content("~/Scripts/jquery.textchange.min.js")"> </script>
    <script src="@Url.Content("~/Scripts/ace/ace.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ace/mode-ruby.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Escriptes/Edit.js")" type="text/javascript"></script>
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div style="display: block">
        <fieldset>
            <legend>@Model.Nome</legend>
            <div>
                <div id="editor">@Model.Texto</div>
            </div>
            <div style="float: right">
                <input id="btnSalvar" type="button" value="salvar" />
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Nome)
            </div>
            <div class="editor-field textBox">
                @Html.EditorFor(model => model.Nome)
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.Descricao)
            </div>
            <div class="editor-field textAreaMedia">
                @Html.TextAreaFor(model => model.Descricao)
                @Html.ValidationMessageFor(model => model.Descricao)
            </div>
        </fieldset>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Sequencer", "Sequencer", new { id = Model.IdSha1 })
</div>
